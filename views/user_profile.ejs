<h1>This is user profile</h1>
<img src="<%= user_profile.avatar %>" alt="<%=user.name%>" width="100px" />
<% if(user.id==user_profile.id){%>
<form
  action="/users/update/<%=user.id%>"
  method="post"
  enctype="multipart/form-data"
>
  <input type="text" name="name" value="<%=user_profile.name%>" required />
  <input type="email" name="email" value="<%=user_profile.email%>" required />
  <input
    type="file"
    name="avatar"
    ,
    alt="<%=user_profile.name%>"
    placeholder="Profile photo"
  />
  <input type="submit" name="avatar" value="Update" />
</form>
<%}else{%>

<h1><%=user_profile.name%></h1>
<h1><%=user_profile.email%></h1>

<%}%>
